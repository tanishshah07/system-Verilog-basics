`ifndef TRANS_SV
`define TRANS_SV

class apb_trans;
rand funct fnx_e; //functional enum
rand bit [AW-1:0] paddr;  
rand bit [DW-1:0] pwdata;
bit [DW-1:0] prdata;
//bit pwrite=fnx_e; //$cast ??
bit pwrite=1;
constraint invalid_addr{
  paddr inside {[0:20]};
}
task dis(input string str="trancistion");
$display("#########################################");
 $display("inside class %s",str);
 $display("TIME__________________________NAME_______DATA");
 $display($time,"Function\t\t%s",fnx_e.name);
 $display($time,"paddr\t\t%b",paddr);
 $display($time,"pwrite\t\t%b",pwrite);
 $display($time,"pwdata\t\t%b",pwdata);
 $display($time,"prdata\t\t%b",prdata);
$display("#########################################");
endtask


endclass
`endif
